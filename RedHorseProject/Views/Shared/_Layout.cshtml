<!DOCTYPE html>
<html lang="en">
<head>


    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/Content/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.min.css" rel="stylesheet">


    <!-- CSS Libraries -->
    <!-- Template CSS -->
    <link href="~/Content/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/Content/css/components.css">
    <!-- jQuery UI CSS -->
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">

    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- /END GA -->
</head>

<body>
    @{Html.RenderPartial("_LayoutModal"); }
    <div class="layout">
        <div class="row">
            <div class="col-md-2" id="app">
                <div class="main-wrapper main-wrapper-1">

                    <div class="main-sidebar sidebar-style-2">
                        <aside id="sidebar-wrapper">
                            <div class="sidebar-brand">
                                <a>Admin Paneli</a>
                            </div>
                            <div class="sidebar-brand sidebar-brand-sm">
                                <a href="index.html">AP</a>
                            </div>
                            <ul class="sidebar-menu">
                                <li class="menu-header">Müşteriler</li>
                                <li>
                                    <a href="~/Home/Index/">
                                        <i class="fas fa-fire"></i><span>Müşteriler</span>
                                    </a>
                                </li>

                                <li class="menu-header">Yönetim</li>
                                <li>
                                    <a class="nav-link" href="~/Home/Rezervation/">
                                        <i class="fas fa-th"></i><span>Rezervasyonlar</span>
                                    </a>
                                </li>

                                <li>
                                    <a class="nav-link" href="~/Home/Appeals/">
                                        <i class="fas fa-th"></i><span>Başvurular</span>
                                    </a>
                                </li>

                                <li class="menu-header">Ayarlar</li>
                                <li>
                                    <a href="~/Home/CustomerCreator/">
                                        <i class="fas fa-th"></i><span>Kullanıcı Oluşturma</span>
                                    </a>
                                </li>
                                @*<li> ORNEK DROPDOWN YAPISI
                                        <a href="~/Home/CustomerCreator/" class="nav-link has-dropdown">
                                            <i class="fas fa-th"></i><span>Kullanıcı Oluşturma</span>
                                        </a>
                                    </li>*@
                                <li>

                                    <a href="~/Home/ResetPassword/">
                                        <i class="fas fa-th"></i><span>Şifre Yenileme</span>
                                    </a>
                                </li>
                                <li>
                                    <form action="/Login/LogOut" method="post">
                                        <button style="margin-left:1em;margin-top:2em" class="btn btn-danger" type="submit">
                                            <span>Çıkış Yap</span>
                                        </button>
                                    </form>

                                </li>
                            </ul>

                        </aside>
                    </div>

                </div>
            </div>
            <!-- Main Content -->

            <div class="col-md-10 ">

                <div class="header">

                    <div class="header-right">
                        <div class="header">
                            <div class="settings">
                                <i class="fa-solid fa-gears" onclick="toggleSettingsMenu()"></i>
                                <ul class="settings-menu" id="settingsMenu">
                                    <li><label for="horseCapacity">At Turu Kapasitesi:</label> <input type="number" id="horseCapacity" placeholder="Kapasite"></li>
                                    <li><label for="atvCapacity">ATV Turu Kapasitesi:</label> <input type="number" id="atvCapacity" placeholder="Kapasite"></li>
                                    <li><label for="jeepCapacity">Jeep Turu Kapasitesi:</label> <input type="number" id="jeepCapacity" placeholder="Kapasite"></li>
                                    <li><label for="balloonCapacity">Balon Turu Kapasitesi:</label> <input type="number" id="balloonCapacity" placeholder="Kapasite"></li>
                                    <li><label for="camelCapacity">Deve Turu Kapasitesi:</label> <input type="number" id="camelCapacity" placeholder="Kapasite"></li>
                                    <li><button onclick="saveCapacities()">Kaydet</button></li>
                                </ul>
                            </div>
                        </div>


                        <div class="mail-box">
                            <a href="#">
                                <i class="fas fa-envelope"></i>
                            </a>
                        </div>
                        <div class="
                             -container">
                            <a href="#" class="user-profile">
                                <i class="fas fa-user"></i>
                                <div class="icon-text" Kullanıcı Adı>

                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                @RenderBody()
            </div>

        </div>

        <footer class="main-footer">
            <div class="footer-left">
                Copyright &copy; 2024 <div class="bullet"></div> Design By Ahmet Aktürk
            </div>
            <div class="footer-right">

            </div>
        </footer>
    </div>

    <!-- General JS Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/tooltip.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/stisla.js"></script>

    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.all.min.js"></script>


    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    <script src="~/Content/js/scripts.js"></script>
</body>
</html>