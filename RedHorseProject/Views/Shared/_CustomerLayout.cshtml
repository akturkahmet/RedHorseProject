<body>
    @{Html.RenderPartial("_LayoutModal"); }

    <div class="layout">
        <div class="row">
            <div class="col-md-2" id="app">
                <div class="main-wrapper main-wrapper-1">
                    <div class="main-sidebar sidebar-style-2">
                        <aside id="sidebar-wrapper">
                            <div>
                                <div class="sidebar-brand">
                                    <h6 style="margin-top: 5px;" class="welcome-text">Hoşgeldiniz </h6>
                                    <h6 style="position:relative; top:8px;" class="username">@FullName</h6>
                                </div>

                            </div>
                            <div class="sidebar-brand sidebar-brand-sm">
                            </div>
                            <ul class="sidebar-menu">
                                <li class="menu-header">Turlar</li>
                                <li>
                                    <a href="/Customer/Index">
                                        <i class="fas fa-th"></i><span>Ana Sayfa</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Customer/ReservationCreater">
                                        <i class="fas fa-th"></i><span>Rezervasyon Oluştur</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Customer/CustomerRezervation">
                                        <i class="fas fa-th"></i><span>Rezervasyonlarım</span>
                                    </a>
                                </li>


                                <li class="menu-header">Ayarlar</li>
                                <li>
                                    <a href="/Customer/ChangePassword">
                                        <i class="fas fa-th"></i><span>Şifre Değiştirme</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Customer/EditInformation">
                                        <i class="fas fa-th"></i><span>Bilgileri Düzenle</span>
                                    </a>
                                </li>
                                <li>
                                    <form action="/Login/LogOut" method="post">
                                        <button style="width: 213px; margin-left: 1em; margin-top: 2em; position: absolute; bottom: 1em; left: 1em; " class="btn btn-danger" type="submit">
                                            <span>Çıkış Yap</span>
                                        </button>
                                    </form>
                                </li>
                                @*<li> ORNEK DROPDOWN YAPISI
                                        <a href="~/Home/CustomerCreator/" class="nav-link has-dropdown">
                                            <i class="fas fa-th"></i><span>Kullanıcı Oluşturma</span>
                                        </a>
                                    </li>*@

                            </ul>

                        </aside>
                    </div>

                </div>
            </div>
            <!-- Main Content -->

            <div class="col-md-10 ">

                @RenderBody()
            </div>
        </div>

        <footer class="main-footer">
            <div class="footer-left">
                Copyright &copy; 2024 <div class="bullet"></div> Design By Asgard Reklam
            </div>
            <div class="footer-right">
            </div>
        </footer>
