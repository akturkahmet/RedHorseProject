@{
    ViewBag.Title = "CustomerSettings";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div id="app">
    <section class="section">
        <section class="section">
            <div class="section-header">

                <h1>Acente Başvuruları</h1>

            </div>
        </section>
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    @*<div class="login-brand">
                        <img src="assets/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">
                    </div>*@

                    <div class="card card-primary">
                        <div class="card-header"><h4>Şifre Yenileme</h4></div>

                        <div class="card-body">
                            <form id="changePasswordForm">
                                <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input id="Email" type="Email" class="form-control" name="Email">
                                </div>

                                <div class="form-group">
                                    <label for="Password">Yeni Şifre</label>
                                    <input id="Password" type="Password" class="togglePassword form-control" name="Password">

                                </div>


                                <div class="form-group">
                                    <label for="password-confirm">Şifreyi Onayla</label>
                                    <input id="password-confirm" type="password" class="togglePassword form-control" name="ConfirmPassword">
                                    <div class="form-check mt-2">
                                        <input type="checkbox" id="showPassword" class="form-check-input">
                                        <label class="form-check-label" for="showPassword">Şifreyi Göster</label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="button" onclick="changePassword()" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                        Şifreyi Yenile
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


