
@{
    ViewBag.Title = "EditClock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <div class="section-header">
        <h5>
          Varsayılan Saatlerin Durumunu Değiştirme
        </h5>
    </div>
    <div class="section-body">
        <div class="container-fluid mt-4">
            <div class="row align-items-center">
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="mb-2" for="tourType">Tur Kategorisi:</label>
                        <select id="tourType" name="tourType" class="form-control">
                            <option value="Select" disabled selected>Seç</option>
                            <option value="0">Hepsi</option>
                            <option value="horse">At Turu</option>
                            <option value="atv">ATV Turu</option>
                            <option value="jeep">Jeep Safari Turu</option>
                            <option value="ballon">Balon Turu</option>
                            <option value="camel">Deve Turu</option>
                        </select>
                    </div>
                </div>
    
                <button type="button" onclick="getHours()" class="btn btn-primary col-md-2" style="height:43px; width:75px;">Listele</button>
            </div>
            <table class="table" id="hoursTable">
                <thead>
                    <tr>
                        <th>Rezervasyon Türü</th>
                        <th>Saat</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</section>



