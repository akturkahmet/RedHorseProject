
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="app">
    <section class="section">
        

            <div class="section-header">
                <h1>Şifre Yenile</h1>

            </div>
        
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4" style="display:flex;justify-content:center;">
                   

                    <div class="card card-primary">
                        <div class="card-header"><h4>Şifre Yenileme</h4></div>

                        <div class="card-body">

                            <form id="changePasswordForm">
                                <div class="form-group">
                                    <label for="UserName">Kullanıcı Adı</label>
                                    <input id="UserName" type="text" class="form-control" name="UserName" >
                                </div>

                                <div class="form-group">
                                    <label for="newPassword">Yeni Şifre</label>
                                    <input id="newPassword" name="newPassword" type="password" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label for="confirmPassword">Şifreyi Onayla</label>
                                    <input id="confirmPassword" type="password" class="form-control" name="confirmPassword" >
                                </div>

                                <div class="form-group">
                                    <button type="button" onclick="changePassword()" class="btn btn-primary btn-lg btn-block" >
                                        Şifreyi Yenile
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>
</div>


