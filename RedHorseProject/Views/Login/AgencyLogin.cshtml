@{
    ViewBag.Title = "Ajans Girişi";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link href="~/Content/css/custom.css" rel="stylesheet" />
<section class="loginSection" style="padding-bottom:80px;">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                @*<div class="login-brand">
                        <img src="assets/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">
                    </div>*@
                <div class="card card-primary">
                    <div class="card-header"><h4>Acenta Girişi</h4></div>

                    <div class="card-body">
                        @using (Html.BeginForm("AgencyLogin", "Login", FormMethod.Post))
                        {
                            if (ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }

                            <div class="form-group">
                                <label for="mail">Email</label>
                                <input id="mail" type="text" class="form-control" name="mail" tabindex="1" autofocus>
                                <div class="invalid-feedback">
                                    Lütfen kullanıcı adı alanını doldurunuz
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="d-block">
                                    <label for="password" class="control-label">Şifre</label>
                                </div>
                                <input id="password" type="password" class="form-control" name="Password" tabindex="2">
                                <div class="invalid-feedback">
                                    Lütfen Şifre alanını doldurunuz
                                </div>
                            </div>

                           

                            <div class="form-group">
                                <button style="display:flex; justify-self:stretch;" type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                    Giriş Yap
                                </button>


                            </div>
                        }
                        <div class="form-group">
                            <a style="display:flex; justify-self:stretch;" href="/Login/Register" type="button" class="btn btn-primary btn-lg btn-block">
                                Kayıt Ol
                            </a>
                        </div>
                        <div class="form-group">
                            <label style="display:flex; justify-self:stretch;" onclick="openfrmEmailVerification()" type="button">
                               Şifremi Unuttum
                            </label>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
